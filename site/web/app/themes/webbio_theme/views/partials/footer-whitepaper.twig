<div class="uk-footer uk-footer-whitepaper" uk-grid>
  <div class="uk-width-1-3@m uk-footer-whitepaper-body">
      <div class="uk-container">
        <div class="uk-section-header">
          <div class="uk-section-subtitle">{{ options.footer_whitepaper_sub_titel }}</div>
          <div class="uk-section-title">{{ options.footer_whitepaper_titel }}</div>
        </div>
        <div class="uk-section-description">
          {{ options.footer_whitepaper_tekst }}
        </div>
        <div class="uk-section-footer">
          <a class="uk-button uk-button-secondary" href="#modal-center" uk-toggle>
            <span class="icon-pdf"></span>
            <span class='uk-box__content-wrap'>
              <span class='uk-box__content'>
                 {{ options.footer_whitepaper_cta_tekst }}
              </span>
            </span>
          </a>
        </div>
      </div>
  </div>
  <div class="uk-width-2-3@m uk-background-secondary">
    <div class="uk-container uk-container-expand">
      <div class="uk-footer-body">
        <div class="uk-footer-wrap">
          <div class="uk-footer-logo">
            <a href="{{ function('home_url', '/') }}" class="uk-logo">
              <img src="{{ options.footer_logo }}" uk-svg
                   class="uk-logo-image {{ image|default('') }}">
            </a>
          </div>
          <div class="uk-footer-info">

            <div class="uk-footer-column">
              <div>{{ options.footer_mailen_tekst }}</div>
              <a href="mailto:{{ options.footer_e_mailadres }}">{{ options.footer_e_mailadres }}</a>
            </div>
            <div class="uk-footer-column">
              <div>{{ options.footer_bellen_tekst }}</div>
              <a href="tel:{{ options.footer_telefoonnummer_link }}">{{ options.footer_telefoonnummer }}</a>
            </div>
          </div>
        </div>
        <div class="uk-footer-media">
          <ul class="uk-footer-nav">
            {% for item  in menu.footer_nav.get_items  %}
              <li><a href="{{ item.get_link }}">{{item.title}}</a></li>
            {% endfor %}
          </ul>
          <ul class="uk-footer-media-list">
            {% for item  in options.footer_social  %}
              <li><a href="{{ item.url }}"><span class="{{ item.icon }}"></span></a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="uk-image-footer"><img src="{{ theme.link }}/assets/images/webbio-dark-dots.svg" uk-svg></div>
  </div>
  <div id="modal-center" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

      <button class="uk-modal-close-default" type="button" uk-close></button>
      <h2 class="uk-modal-title">Contactformulier</h2>
      <div>
        {% filter shortcodes %}
          [gravityform id="2" title="false" description="false" ajax="true"]
        {% endfilter %}
        <a href="{{ options.footer_whitepaper_cta_url }}" target="{{ options.footer_whitepaper_cta_target }}" class="uk-pdf-download uk-hidden">Open document</a>
      </div>
    </div>
  </div>
</div>