<ul class="uk-offcanvas-nav">
  {% for item in menu.main.get_items %}
    <li class="{% if 'current-page-ancestor' in item.classes or 'current-menu-item' in item.classes %}uk-active{% endif %}"><a href="{{item.get_link}}"  class="{% if item.get_children %}uk-dropdown-toggler{% endif %}">{{item.title}}</a>
      {% if item.get_children %}
        <div uk-dropdown="mode: click">
          <ul class="uk-nav uk-dropdown-nav">
            {% for child in item.get_children %}
              <li class="{% if 'current-page-ancestor' in child.classes or 'current-menu-item' in child.classes %}uk-active{% endif %}"><a href="{{child.get_link}}">{{child.title}}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </li>
  {% endfor %}
</ul>
