{% if pagination.pages %}
	<div class="uk-pagination {{ modify|default('') }}">
		{% if pagination.prev %}
			<a href="{{pagination.prev.link}}" class="uk-pagination-prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
	    {% endif %}
	    <ul class="uk-pagination uk-pagination-pages">
	        {% for page in pagination.pages %}
	            <li {% if not page.link %} class="uk-active" {% endif %}>
	                {% if page.link %}
	                    <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
	                {% else %}
	                    <span class="{{page.class}}">{{page.title}}</span>
	                {% endif %}
	            </li>
	        {% endfor %}
	    </ul>
	    {% if pagination.next %}
	    	<a href="{{pagination.next.link}}" class="uk-pagination-next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
	    {% endif %}
	</div>
{% endif %}
