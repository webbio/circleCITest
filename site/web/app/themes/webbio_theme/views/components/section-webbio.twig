<div class="uk-section uk-section-webbio">
  <div class="uk-container">
    <div uk-grid>
      <div class="uk-width-3-5@l uk-width-1-2@m">
        <div uk-grid>
          <div class="uk-section-header uk-h2 uk-width-1-4@l uk-width-1-3@s">
            <div class="uk-section-subtitle">{{ options.hey_webbio_titel }}</div>
          </div>
          <div class="uk-section-description uk-width-3-4@l uk-width-2-3@s">
            {{ options.hey_webbio_tekst }}
          </div>
        </div>
        <div class="uk-section-image uk-visible@m">
          <img class="lazy uk-img-hidden" data-src="{{ options.hey_webbio_afbeelding }}" alt="">
        </div>
        <div class="uk-section-action uk-hidden@s">
          <div>
            <a class="uk-button uk-button-default" href="#modal-form" uk-toggle><span class="icon-form"></span>{{ options.hey_webbio_contactformulier_tab_tekst }}</a>
            <span class="uk-text-center">{{ options.hey_webbio_of_tekst_tussen_tabs }}</span>
            <a class="uk-button uk-button-default uk-intercom" href="#"><span class="icon-chat"></span>{{ options.hey_webbio_direct_chatten_tab_tekst }}</a>
          </div>
        </div>
      </div>
      <div class="uk-width-2-5@l uk-width-1-2@m uk-section-right uk-visible@s">
        <ul class="uk-tab" data-uk-tab="{connect:'#uk-tab-content'}">
          <li class="uk-active"><a href="#"><span class="icon-form"></span>{{ options.hey_webbio_contactformulier_tab_tekst }}</a></li>
          <li class="uk-empty-tab">{{ options.hey_webbio_of_tekst_tussen_tabs }}</li>
          <li><a href="#" class="uk-intercom"><span class="icon-chat"></span>{{ options.hey_webbio_direct_chatten_tab_tekst }}</a></li>
        </ul>
        <ul id="uk-tab-content" class="uk-switcher">
          <li>{{ options.hey_webbio_shortcode_formulier|shortcodes }}</li>
        </ul>
      </div>
    </div>
    <div id="modal-form" class="uk-flex-top" uk-modal>
      <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">{{ options.hey_webbio_contactformulier_tab_tekst }}</h2>
        <div>
          {% filter shortcodes %}
            [gravityform id="1" title="false" description="false" ajax="true"]
          {% endfilter %}
        </div>
      </div>
    </div>
    <div id="modal-chat" class="uk-flex-top" uk-modal>
      <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

        <button class="uk-modal-close-default" type="button" uk-close></button>
        <h2 class="uk-modal-title">{{ options.hey_webbio_direct_chatten_tab_tekst }}</h2>
        <div>

        </div>
      </div>
    </div>
  </div>
</div>